{
  "manifest_version": 3,
  "name": "Edu Maps Notify Helper",
  "version": "1.0.0",
	"description": "",
  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  "action": {
    
    "default_title": "Toggle Notification Helper",
    "default_popup": "ui/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.edumaps.de/*"],
      "js": ["scripts/content-script.js"]
    }
  ],
  "host_permissions": [
    "https://www.edumaps.de/*"
  ],
  "permissions": [
    "notifications",
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "alarms"
  ]
}
